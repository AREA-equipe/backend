{
  "tasks": {
    "dev": "deno run --allow-net --watch main.ts",
    "build": "deno compile --allow-net main.ts"
  },
  "exclude": ["dist", "node_modules", "**/*.lock"],
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "imports": {
    "hono": "jsr:@hono/hono@^4.6.10"
  }
}
