{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --watch app/main.ts",
    "build": "deno compile --allow-net --allow-env --output dist/app app/main.ts"
  },
  "exclude": ["dist", "node_modules", "**/*.lock"],
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "imports": {
    "hono": "jsr:@hono/hono@^4.6.10",
    "hono/middleware": "https://deno.land/x/hono@v4.3.11/middleware.ts"
  }
}
