{
  "tasks": {
    "dev": "deno run --allow-env --env-file=.env.dev --allow-read --allow-net --watch app/main.ts",
    "build": "deno compile --allow-env --allow-read --allow-net --output dist/app app/main.ts",
    "test": "deno test --allow-env --env-file=.env.dev --allow-net=0.0.0.0 --watch",
    "coverage": "deno test --allow-net=0.0.0.0 --coverage --clean && deno coverage"
  },
  "exclude": ["dist", "node_modules", "**/*.lock"],
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "imports": {
    "@hono": "npm:hono@^4.6.10",
    "@hono-openapi": "npm:hono-openapi@^0.1.5",
    "@scalar/hono-api-reference": "npm:@scalar/hono-api-reference@^0.5.159",
    "@std/assert": "jsr:@std/assert@^1.0.8",
    "zod": "npm:zod@^3.23.8",
    "zod-openapi": "npm:zod-openapi@^4.0.0"
  }
}
